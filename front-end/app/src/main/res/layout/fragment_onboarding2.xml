<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/onboard_satu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/onboarding2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/title_onboarding_2"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@+id/onboard_satu"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/txt_judul"
        android:text="@string/detail_onboarding_2"
        android:textSize="11sp"
        android:textColor="@color/black"/>

</RelativeLayout>